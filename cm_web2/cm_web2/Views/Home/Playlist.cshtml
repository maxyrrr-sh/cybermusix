@model List<Music>

<h1>Музика</h1>

<table class="table">
    <thead>
        <tr>
            <th>Назва</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var music in Model)
        {
            <tr>
                <td>@music.Name</td>
                <td>
                    <audio controls>
                        <source src="data:audio/mpeg;base64,@(Convert.ToBase64String(music.FileData))" type="audio/mpeg">
                        Your browser does not support the audio element.
                    </audio>
                    <!-- Додано кнопку для кожної пісні, що відправляє id пісні до деякого маршруту -->
                    <form asp-controller="Music" asp-action="GetSongId" method="post">
                        <input type="hidden" name="songId" value="@music.Id" />
                        <button type="submit" class="btn btn-primary">Отримати ID пісні</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="AddMusicFromFolder" asp-route-folderPath="~/Music">Додати музику з папки</a>
