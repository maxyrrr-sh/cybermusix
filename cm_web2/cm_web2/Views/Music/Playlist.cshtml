@model List<Music>

<h1>Музика</h1>

<table class="table">
    <thead>
        <tr>
            <th>Назва</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var music in Model)
        {
            <tr>
                <td>@music.Name</td>
                <td>
                    <audio controls>
                        <source src="data:audio/mpeg;base64,@(Convert.ToBase64String(music.FileData))" type="audio/mpeg">
                        Your browser does not support the audio element.
                    </audio>
                    <form asp-controller="Music" asp-action="GetSongId" method="post">
                        <input type="hidden" name="songId" value="@music.Id" />
                        <button type="submit" class="btn btn-primary">Додати до персонального плейлиста</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<form method="post" enctype="multipart/form-data" asp-controller="Music" asp-action="AddMusicFromFolder">
    <input type="file" name="folderPath" directory webkitdirectory multiple style="display:none" id="folderPathInput" />
    <button type="button" onclick="document.getElementById('folderPathInput').click();">Вибрати папку</button>
    <button type="submit">Додати музику з папки</button>
</form>

